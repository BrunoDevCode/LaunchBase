{% extends 'layout.njk' %}

{% block head %}
  <title>Editar Professor</title>
{% endblock %}

{% block content %}
  <div class='card'>
    <section class="avatar" style='background-image: url({{teacher.avatar_url}})'></section>

    <section class="details">
      <form method='POST' action='/teachers?_method=PUT'>
        <h3>Editar professor</h3>

        <input type='hidden' name='id' value='{{teacher.id}}'/>
        {% include 'teachers/fields.njk' %}
      </form>

      <form id='form-delete' method='POST' action='/teachers?_method=DELETE'>
        <input type='hidden' name='id' value='{{teacher.id}}'/>
    
        <button type='submit'>Deletar</button>
      </form>
    </section>
  </div>
  {% include 'confirm.njk' %}
{% endblock %}