<div class="item">
  <div class='item'>
    <div class="">Avatar_URL</div>
      <div class="">
        <input type="url" name='avatar_url' placeholder='Foto do professor :' value="{{teacher.avatar_url}}">
    </div>
  </div>

  <div class="item">
    <div class="">Nome</div>
    <div class="">
      <input type="text" name='name' placeholder='Nome do professor :' value='{{teacher.name}}'>
    </div>
  </div>

  <div class="item">
    <div class="">Data de Nascimento</div>
    <div class="">
      <input type="date" name="birth_date" value='{{teacher.birth_date}}'>
    </div>
  </div>

  <div class="item">
    <div class="">Grau de escolaridade</div>
    <div class="">
      <select name="education_level" required>
        <option value=''
          {% if teacher.education_level == "" %}
            selected
          {% endif %}
        >Selecione uma opção ...</option>

        <option
          value="Ensino Médio Completo"
          {% if teacher.education_level == "Ensino Médio Completo" %}
            selected
          {% endif %}
        >Ensino Médio Completo</option>

        <option
          value="Ensino Superior Completo"
          {% if teacher.education_level == "Ensino Superior Completo" %}
            selected
          {% endif %}
        >Ensino Superior Completo</option>

        <option
          value="Mestrado"
          {% if teacher.education_level == "Mestrado" %}
            selected
          {% endif %}
        >Mestrado</option>

        <option
          value="Doutorado"
          {% if teacher.education_level == "Doutorado" %}
            selected
          {% endif %}
        >Doutorado</option>
      </select>
    </div>
  </div>

  <div class="item">
    <div class="">Tipo de Aula</div>
    <div class="">
      <span>
        <input 
          type="radio"
          name="class_type"
          value='P'
          {% if teacher.class_type == "P" %}
            checked
          {% endif %}
        />
        Presencial
      </span>
      <span>
        <input
          type="radio"
          name="class_type"
          value='EAD'
          {% if teacher.class_type == "EAD" %}
            checked
          {% endif %}
        />
        À Distancia
      </span>
    </div>
  </div>

  <div class="item">
    <div class="">Área de atuação</div>
    <div class="">
      <input type="text" name="subjects_taught" placeholder='Separe por vírgula os serviços prestados...' value='{{teacher.subjects_taught}}'>
    </div>
  </div>
  <button type='submit'>Salvar</button>
</div>