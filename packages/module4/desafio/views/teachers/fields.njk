<div class="item">
  <div class="">Avatar_URL</div>
    <div class="">
      <input type="url" name='avatar_url' placeholder='Foto do professor :' value="{{teacher.avatar_url}}">
    </div>
  </div>

  <div class="item">
    <div class="">Nome</div>
    <div class="">
      <input type="text" name='name' placeholder='Nome do professor :' value='{{teacher.name}}'>
    </div>
  </div>

  <div class="item">
    <div class="">Data de Nascimento</div>
    <div class="">
      <input type="date" name="birth" value='{{teacher.birth}}'>
    </div>
  </div>

  <div class="item">
    <div class="">Grau de escolaridade</div>
    <div class="">
      <select name="degree" required>
        <option value=''
          {% if teacher.degree == "" %}
            selected
          {% endif %}
        >Selecione uma opção ...</option>

        <option
          value="Ensino Médio Completo"
          {% if teacher.degree == "Ensino Médio Completo" %}
            selected
          {% endif %}
        >Ensino Médio Completo</option>

        <option
          value="Ensino Superior Completo"
          {% if teacher.degree == "Ensino Superior Completo" %}
            selected
          {% endif %}
        >Ensino Superior Completo</option>

        <option
          value="Mestrado"
          {% if teacher.degree == "Mestrado" %}
            selected
          {% endif %}
        >Mestrado</option>

        <option
          value="Doutorado"
          {% if teacher.degree == "Doutorado" %}
            selected
          {% endif %}
        >Doutorado</option>
      </select>
    </div>
  </div>

  <div class="item">
    <div class="">Tipo de Aula</div>
    <div class="">
      <span>
        <input 
          type="radio"
          name="typeOfClass"
          value='P'
          {% if teacher.typeOfClass == "P" %}
            checked
          {% endif %}
        />
        Presencial
      </span>
      <span>
        <input
          type="radio"
          name="typeOfClass"
          value='EAD'
          {% if teacher.typeOfClass == "EAD" %}
            checked
          {% endif %}
        />
        À Distancia
      </span>
    </div>
  </div>

  <div class="item">
    <div class="">Área de atuação</div>
    <div class="">
      <input type="text" name="works" placeholder='Separe por vírgula os serviços prestados...' value='{{teacher.works}}'>
    </div>
  </div>
  <button type='submit'>Salvar</button>
</div>