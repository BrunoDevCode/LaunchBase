{% extends 'layout.njk' %}

{% block head %}
  <title>School Manager</title>
{% endblock %}

{% block content %}
  <div class="card">
    <div class="avatar" style='background-image: url({{instructor.avatar_url}})'></div>
    <div class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div class="">Nome</div>
        <div class="">{{teacher.name}}</div>
      </div>

      <div class="item">
        <div class="">Idade</div>
        <div class="">{{teacher.age}}</div>
      </div>

      <div class="item">
        <div class="">Grau de escolaridade</div>
        <div class="">{{teacher.degree}}</div>
      </div>

      <div class="item">
        <div class="">Tipo de aula</div>
        <div class="">{{ "Presencial" if teacher.typeOfClass === "P" else "À Distância" }}</div>
      </div>

      <div class="item">
        <div class="">Acompanhamento</div>
        <div class="">
          {% for work in teacher.works %}
            <span class='work'>{{work}}</span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div class="">Desde</div>
        <div class="">{{teacher.created_at}}</div>
      </div>

      <a href='/teachers/{{teacher.id}}/edit' class='button'>Editar</a>
    </div>
  </div>
{% endblock %}
