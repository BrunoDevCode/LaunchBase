{% extends 'layout.njk' %}

{% block head %}
  <title>School Manager</title>
{% endblock %}

{% block content %}
  <div class="card">
    <div class="avatar"></div>
    <div class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div class="">Nome</div>
        <div class="">{{teacher.name}}</div>
      </div>

      <div class="item">
        <div class="">Idade</div>
        <div class="">{{teacher.age}}</div>
      </div>

      <div class="item">
        <div class="">Grau de escolaridade</div>
        <div class="">{{teacher.degree}}</div>
      </div>

      <div class="item">
        <div class="">Tipo de aula</div>
        <div class="">{{teacher.typeOfClass}}</div>
      </div>

      <div class="item">
        <div class="">Acompanhamento</div>
        <div class="">
          {% for work in teacher.works %}
            <span>{{work}}</span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div class="">Desde</div>
        <div class="">{{teacher.create_at}}</div>
      </div>
    </div>
  </div>
{% endblock %}
