{% extends 'layout.njk' %}

{% block content %}
    <form class="card" method='POST' action='/teachers'>
        <div class="card-image"></div>

        <div class="card-details">
            <h2>Create a new teacher</h2>

            <div class="card-info">
                <h3>Nome</h3>
                <input type='text' name='name' placeholder='Nome do professor'/>
            </div>

            <div class="card-info">
                <h3>Nascimento</h3>
                <input type="date" name="birth"/>
            </div>

            <div class="card-info">
                <h3>Grau de Escolaridade</h3>
                <select name="schooling">
                    <option value="Ensino Médio Completo" select>Ensino Médio Completo</option>
                    <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                    <option value="Mestrado">Mestrado</option>
                    <option value="Doutorado">Doutorado</option>
                </select>
            </div>

            <div class="card-info">
                <h3>Tipo de Aula</h3>
                <span><input type="radio" name="classType" value='Presencial' checked/>Presencial</span>
                <span><input type="radio" name="classType" value='À Distancia' />À Distancia</span>
            </div>

            <div class="card-info">
                <h3>Área de atuação</h3>
                <input type="text" name="services" placeholder='Separe por vírgula as áreas de atuação'/>
            </div>

            <button type="submit">Salvar</button>
        </div>

    </div>
{% endblock %}