{% extends 'layout.njk' %}

{% block head %}
    <title>Conteudo - {{empresa.name}}</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
{% endblock %}

{% block content %}
    <aside class="submenu">
        <h2>Conteudos da {{empresa.name}}</h2>
    </aside>

    <main>
        <div class="cards">
            {% for card in empresa.cards %}
                <div class="card" id='{{ card.id }}'>
                    <div class="card-img">
                        <img src='{{ card.img_url }}' alt='{{ card.id }}'/>
                    </div>

                    <div class="card-content">{{ card.description }}</div>

                    <div class="card-info">
                        <p>{{ card.moduleLength }}
                            Modulos</p>
                        <p class='card-price'>{{ card.price }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>

    <div class="modal-overlay">
        <div class="modal">
            <a class='maximize-modal'>
                <i class='material-icons'>fullscreen</i>
            </a>

            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="script.js"></script>
{% endblock %}